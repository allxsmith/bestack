{
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "bundle:stats": {
      "outputs": ["dist/**"]
    },
    "typecheck": {},
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "lint": {},
    "storybook": {
      "cache": false
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    },
    "publish": {
      "dependsOn": ["build"],
      "outputs": [],
      "env": ["NODE_AUTH_TOKEN"]
    }
  }
}
