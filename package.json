{
  "name": "@allxsmith/bestack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib",
    "doc-site",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "bundle:stats": "turbo run bundle:stats",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx}\"",
    "lint": "turbo run lint",
    "all": "turbo run build typecheck test test:coverage bundle:stats lint format:check && turbo run build-storybook --filter=@allxsmith/bestack-lib",
    "storybook": "turbo run storybook --filter=@allxsmith/bestack-lib",
    "publish": "turbo run publish --filter=@allxsmith/bestack-lib"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allxsmith/bestack.git"
  },
  "author": "Alex Smith",
  "license": "MIT",
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "eslint-config-react-hooks": "^1.0.0",
    "ts-jest": "^29.3.4"
  }
}
