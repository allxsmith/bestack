{
  "name": "@allxsmith/bestack",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["lib", "doc-site", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "bundle:stats": "turbo run bundle:stats",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "turbo": "^2.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allxsmith/bestack.git"
  },
  "author": "Allx Smith",
  "license": "MIT",
  "packageManager": "npm@10.9.2"
}